extends layout

block header
  .list-item.top-bar
    .clearfix
    .container
      .row
        .span2 &nbsp;
        .span8
          .header.center
            h1
              img(src="/images/riverside-io.svg")
              span Riverside.io
            .description We are a group of people actively growing a Coworking community in Riverside.
    .clearfix

block sign-up
  .list-item
    .container
        .row
          .span2 &nbsp;
          .span8
            <iframe width="100%" height="400" src="http://www.youtube.com/embed/le0dfcG_jVw?feature=player_embedded" frameborder="0" allowfullscreen></iframe>

            .row
              .span8
                h2.center Get Involved Today
                br
              .span4.center
                a.btn.btn-danger.btn-large.btn-join-mailing(href="http://eepurl.com/qZh-T", onClick="_gaq.push(['_trackEvent', 'Buttons', 'Subscribe', 'Join Mailing List']);") Join The Mailing List
                p Receive weekly progress updates on creating a coworking space in Riverside.
              .span4.center
                a.btn.btn-info.btn-large.btn-join-mailing(href="/pdfs/pitch-deck.pdf", onClick="_gaq.push(['_trackEvent', 'Buttons', 'Download', 'Download Pitch Deck']);") Download Pitch Deck
                p Put it on your phone or tablet device. Show it to others to get them involved!

