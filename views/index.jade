          .span3 &nbsp;

  .list-item.members
    .container
      .span12
        h2 Who we are
        .row.persons
          - members.people.forEach(function(person){
            .span2.person
              .center
                a.shadow
                  img.face.roundify(src=person.avatar)
              h4= person.name
              p!= person.description
              .clearfix
          - })