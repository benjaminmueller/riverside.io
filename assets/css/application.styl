// Mixins
border-radius(n)
  -webkit-border-radius n
  -moz-border-radius n
  border-radius n

shadow(color)
  -moz-box-shadow:    0px 1px 1px 0px color
  -webkit-box-shadow: 0px 1px 1px 0px color
  box-shadow:         0px 1px 1px 0px color

// Style
body
  font-family: "Open Sans"
  font-weight: 300
  background: #fff url(/images/patterns/subtle_dots.png)

.center
  text-align: center

.roundify
  border-radius(50%)

.header
  margin-top: 1em
  margin-bottom: 40px
  .description
    font-size: 20px
    margin-bottom: 20px
  img.logo
    margin: 20px

#index
  text-align: left
  margin-bottom: 40px
  .face
    max-width: 120px
    max-height: 120px
    margin: 20px
    shadow(#333)


@media(max-width: 980px)

  #index

    .persons
        margin: 0 auto;
        display: table;
      .person
          width: 28%
          margin: 0 2%;
          float: left;

        .face
          max-width: 100%;
          margin: 10px 0;

.map 
  display: block;
  overflow: hidden;
  width: 460px;
  border: 1px solid #CCC;
  background: #FFF url(/images/map-coffee-bean.jpg) no-repeat;
  height: 410px;
